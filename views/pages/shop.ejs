<!DOCTYPE html>

<html>
	<head>
		<title>Shopping for Items - barter</title>
		<link rel="stylesheet" type="text/css" href="css/barter.css">
	</head>
	<body>
		<h1>Welcome to the Server Shop!</h1>
		<p>Please feel free to browse.</p>
		<div>
			<table>
				<thead>
					<tr>
						<th><!-- Placeholder for Item Image --></th>
						<th>Item</th>
						<th>Description</th>
						<th>Function</th>
						<th>In Stock</th>
						<th>Cost</th>
						<th>Edit</th>
						<th><!--TODO: Buying items --></th>
					</tr>
				</thead>
				<tbody>
				<% items.forEach(function (item) { %>
					<tr>
						<td><img src="/images/<%= item.img %>"></td>
						<td><%= item.name %></td>
						<td><%= item.desc %></td>
						<td><%= item.fName %></td>
						<td>
						<% if (item.quantity >= 0) { %>
							<%= item.quantity %>
						<% }
						else { %>
							&infin;
						<% } %>
						</td>
						<td>
							<div class="cost">
								[$] x <%= item.balCost %>
							</div>
					<% if(item.costsItems) { 
						itemCosts.forEach(function (costItem) { 
							if (costItem.itemID === item.itemID) { %>
							<div class="cost">
								<img title="<%= costItem.name %>" src="/images/<%= costItem.img %>"> x <%= costItem.quantity %>
							</div>
							<% }
						});
					} %>
						</td>
						<td><a href="/editShopItem?stockID=<%= item.stockID %>">Edit</a></td>
						<td><!-- TODO: Buying Items --></td>
					</tr>
				<% }); %>
		</div>
		<div>
			<!-- Why would this appear above the table??? -->
			<p><a href="/addToShop">Click here</a> to add an item to the shop.</p>
			<p><a href="/">Click here</a> to return to the index page.</p>
		</div>
	</body>
</html>
